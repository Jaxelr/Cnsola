<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageType>Template</PackageType>
    <IsPackable>true</IsPackable>
    <Version>0.0.7</Version>
    <PackageId>Cnsola</PackageId>
    <PackageCopyright>2022</PackageCopyright>
    <Title>Cnsla</Title>
    <Authors>Jaxel Rojas</Authors>
    <Description>Template for console applications with usual custom configurations to speed up development</Description>
    <PackageTags>template;console;</PackageTags>
    <PackageProjectUrl>https://github.com/Jaxelr/Cnsola</PackageProjectUrl>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>Content</ContentTargetFolders>
    <NoDefaultExcludes>true</NoDefaultExcludes>
    <NoWarn>NU5128</NoWarn>
    <PackageReleaseNotes>Migration to Net 6.0</PackageReleaseNotes>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Content\**" Exclude="**\.vs\**;**\bin\**;**\obj\**;**\*.user;**\*.lock.json;**\node_modules\**;**\.vscode\**;**\wwwroot\**" />
    <Compile Remove="**\*" />
  </ItemGroup>
  <ItemGroup>
    <None Include="readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
